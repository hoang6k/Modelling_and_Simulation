bool debug = true;

int n = 50, C = 1;

border C1(t=0, pi){x=t; y=0; label=C;};
border C2(t=pi, 0){x=t; y=pi-t; label=C;};
border C3(t=pi, 0){x=0; y=t; label=C;};
mesh Th = buildmesh(C1(n) + C2(n) + C3(n));

plot(Th, wait=debug);

fespace Vh(Th, P1);
Vh u, v;
func f = -2 * sin(x + y);

solve Poisson(u, v, solver=LU) = 
        int2d(Th)(
            dx(u) * dx(v) + dy(u) * dy(v)
        )
        + int2d(Th)(f * v)
        + on(C, u=0);

plot(u, wait=true, value=true, fill=true);